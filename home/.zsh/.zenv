# setting for ls
# http://nemoplus.hateblo.jp/entry/20090119/1232373540
export LSCOLORS=fxgxcxdxbxegedabagacad

# setting for enhancd
export ENHANCD_FILTER=fzf

# setting for fzf
export FZF_DEFAULT_OPTS='--height 40% --reverse --border'

# setting for dotfiles home
export DOTFILES_HOME="${HOME}/.dotfiles"
export BREW_FILE="${DOTFILES_HOME}/etc/brew/Brewfile"

# setting for pyenv
if [ -d "${HOME}/.pyenv" ]; then
  export PYENV_ROOT="${HOME}/.pyenv"
  export PATH=${PYENV_ROOT}/shims:$PATH
  export PIPENV_VENV_IN_PROJECT=true
  eval "$(pyenv init -)"
fi

# setting for nodebrew
export PATH=${HOME}/.nodebrew/current/bin:$PATH

# setting for jenv
if type jenv > /dev/null; then
  export PATH="$HOME/.jenv/bin:$PATH"
  eval "$(jenv init -)"
fi

# setting for dotnet
export PATH="/usr/local/share/dotnet/:$PATH"

# setting for sdkman
export SDKMAN_DIR="$HOME/.sdkman"
[[ -s "$HOME/.sdkman/bin/sdkman-init.sh" ]] && source "$HOME/.sdkman/bin/sdkman-init.sh"

# setting for rbenv
if type rbenv > /dev/null; then
  eval "$(rbenv init -)"
fi

# setting for goenv
if [ -d "${HOME}/.goenv" ]; then
  export GOENV_ROOT="${HOME}/.goenv"
  export PATH=${GOENV_ROOT}/bin:$PATH
  eval "$(goenv init -)"
fi

# setting for cargo
[ -f "$HOME/.cargo/env" ] && source "$HOME/.cargo/env"

# setting for asdf 
if [[ -f $ZPLUG_REPOS/asdf-vm/asdf/asdf.sh ]]; then
  source $ZPLUG_REPOS/asdf-vm/asdf/asdf.sh
fi
